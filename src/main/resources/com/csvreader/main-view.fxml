<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<StackPane xmlns="http://javafx.com/javafx/11.0.1"
           xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="com.csvreader.controller.MainController"
           stylesheets="@style.css"
           style="-fx-background-color: #121212;">

    <!-- Contenedor principal centrado -->
    <VBox alignment="CENTER" spacing="20" maxWidth="900" maxHeight="650"
          style="-fx-background-color: #1e1e1e; -fx-background-radius: 16; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.25), 20, 0.1, 0, 10); -fx-padding: 0;">

        <!-- Header con título y controles -->
        <HBox alignment="CENTER" spacing="20"
              style="-fx-background-color: #1a1a1a; -fx-background-radius: 16 16 0 0; -fx-padding: 30;">

            <!-- Título -->
            <VBox alignment="CENTER_LEFT" HBox.hgrow="ALWAYS">
                <Label text=" CSV Lector"
                       style="-fx-font-size: 24px; -fx-font-weight: bold;" />
                <Label fx:id="lblStatus" text="Coloca un archivo CSV" />
            </VBox>

            <!-- Controles -->
            <VBox spacing="10" alignment="CENTER">
                <Button fx:id="btnOpenFile" mnemonicParsing="false"
                        prefWidth="160" prefHeight="40"
                        text=" Cargar CSV" />
                <Button fx:id="btnClear" mnemonicParsing="false"
                        prefWidth="160" prefHeight="40"
                        text="Limpiar" />
            </VBox>

            <!-- Progress bar oculto -->
            <ProgressBar fx:id="progressBar" prefWidth="160" visible="false" />
        </HBox>

        <!-- Área de contenido con la tabla -->
        <VBox VBox.vgrow="ALWAYS" spacing="0"
              style="-fx-padding: 0 30 30 30;">

            <!-- Tabla principal -->
            <TableView fx:id="tableView" VBox.vgrow="ALWAYS">
                <placeholder>
                    <VBox alignment="CENTER" spacing="15">
                        <Label text="📄" style="-fx-font-size: 48px;" />
                        <Label text="No hay datos para mostrar"
                               style="-fx-font-size: 16px; -fx-font-weight: 500;" />
                        <Label text="Selecciona un archivo CSV para comenzar"
                               style="-fx-font-size: 13px;" />
                    </VBox>
                </placeholder>
                <columnResizePolicy>
                    <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                </columnResizePolicy>
            </TableView>

            <!-- Footer con información básica -->
            <HBox alignment="CENTER_LEFT" spacing="10"
                  style="-fx-padding: 20 0 0 0;">
                <Label text="●" style="-fx-text-fill: #00e676; -fx-font-size: 8px;" />
                <Label text="Listo" />
                <Region HBox.hgrow="ALWAYS" />
                <Label fx:id="lblFileInfo" text="" />
            </HBox>
        </VBox>

    </VBox>

</StackPane>
